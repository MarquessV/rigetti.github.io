---
import '@fontsource-variable/open-sans';
---

<style is:inline is:global>
  :root {
    --rigetti-color-blue: rgb(61, 71, 217);
    --rigetti-color-darkblue: rgb(13, 13, 54);
    --rigetti-color-darkerblue: rgb(8, 8, 33);
    --rigetti-color-teal: rgb(0, 181, 173);
    --rigetti-color-magenta: rgb(239, 71, 111);
    --rigetti-color-yellow: rgb(255, 197, 4);
    --rigetti-color-gray: rgb(138, 139, 146);

    --aw-font-sans: 'Open Sans Variable';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: rgb(30 64 175);
    --aw-color-secondary: rgb(30 58 138);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    /* --aw-color-bg-page-dark: rgb(13 13 54); */
    --aw-color-bg-page-dark: var(--rigetti-color-darkerblue);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Open Sans Variable';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans);

    --aw-color-primary: rgb(0 181 173); /* Teal */
    --aw-color-secondary: rgb(239 71 111); /* Magenta */
    --aw-color-accent: rgb(255 197 4); /* Yellow */

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(255 255 255);
    --aw-color-text-muted: rgb(138 139 146);
    --aw-color-bg-page: var(--aw-color-bg-page-dark);
    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
